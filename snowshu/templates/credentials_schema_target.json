{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Validation schema for credentials.yml",
    "description": "credentials.yml store the target connection information.",
    "type": "object",
    "properties": {
      "targets": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "properties": {
              "account": {
                "type": "string"
              },
              "adapter": {
                "type": "string"
              },
              "database": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "password": {
                "type": "string"
              },
              "user": {
                "type": "string"
              }
            },
            "required": [
              "account",
              "adapter",
              "database",
              "name",
              "password",
              "user"
            ]
          }
        ]
      },
      "version": {
        "type": "string"
      }
    },
    "required": [
      "targets",
      "version"
    ]
  }

